<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="tn.edu.esprit.cs.playBox-ejb">
		<jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
		<class>domain.Admin</class>
		<class>domain.Event</class>
		<class>domain.Performance</class>
		<class>domain.PerformanceId</class>
		<class>domain.Show</class>
		<class>domain.Theater</class>
		<class>domain.Ticket</class>
		<class>domain.User</class>
		<class>domain.Visitor</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>
</persistence>
